{
    "id": "https://github.com/systematic-chaos/mbda-tfm",
    "$schema": "https://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "domain": {
            "type": "string",
            "enum": [
                "classification",
                "regression",
                "clustering",
                "deep-learning"
            ]
        },
        "dataset": {
        	"type": "object",
        	"properties": {
        		"path": {
        			"type": "string"
        		},
        		"format": {
        			"type": "string",
        			"enum": ["libsvm"]
        		}
        	},
        	"required": ["path"]
        },
        "methods": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "algorithm": {
                        "type": "string",
                        "enum": [
                        	"linear-regression",
                            "decision-tree",
                            "svm",
                            "k-means",
                            "neural-network",
                            "branin"
                        ]
                    },
                    "hyperparameters": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "param": {
                                    "type": "string"
                                },
                                "values": {
                                    "type": "array",
                                    "items": {
                                        "type": [
                                            "number",
                                            "string"
                                        ]
                                    }
                                }
                            },
                            "required": [
                                "param",
                                "values"
                            ]
                        }
                    }
                },
                "required": [
                    "algorithm"
                ]
            },
            "uniqueItems": true
        },
        "parameterSearch": {
        	"type": "string",
        	"enum": [
        		"grid",
        		"random",
        		"bayesian-optimization"
        	]
        },
        "computationalResources": {
            "type": "object",
            "properties": {
                "instances": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "ec2Instance": {
                                "type": "string",
                                "pattern":"^[A-Za-z][0-9][a-z]?.(([1-9]{1,2}x)|x)?(nano|micro|small|medium|large|metal)$"
                            },
                            "additionalHardware": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "enum": [
                                        "GPU"
                                    ]
                                },
                                "uniqueItems": true
                            },
                            "minInstances": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 32
                            },
                            "maxInstances": {
                                "type": "integer",
                                "minimum": 1,
                                "maximum": 32
                            }
                        }
                    }
                },
                "minTotalInstances": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 32
                },
                "maxTotalInstances": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 64
                }
            }
        },
        "emailAddress": {
            "type": "string",
            "format": "email"
        }
    },
    "required": [
        "domain",
        "methods",
        "emailAddress"
    ]
}